import random
import numpy as np
random_radius = random.randint(1, 100)
omega = 2.7e-6
v_r = 400e3
r_0 = 1
B_0 = 2.5e-9
B_r = B_0*(r_0/random_radius)**2
r = random_radius*1.496e11
B_phi = -omega*r*B_r/v_r 
v = np.array([v_r, 0, 0])
B = np.array([B_r, 0, B_phi])
E = -np.cross(v, B)